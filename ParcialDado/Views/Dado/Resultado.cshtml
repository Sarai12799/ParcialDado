@model ParcialDado.Models.Dado

@{
	ViewData["Title"] = "RESULTADO DEL LANZAMIENTO";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJ4QFQFq0mrmz2Yrt8tStuxhK4F67Z6hf5vZgPtDpduga3V0czRA6PfA5dEl" crossorigin="anonymous">

    
    <style>
        body {
            background-color: lightseagreen;
        }

        .result-container {
            background-color: #ffffff; 
            border-radius: 8px; 
            padding: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
            max-width: 500px; 
            margin: 0 auto;
        }

        h2 {
            color: #004085;
        }

        .resultado {
            margin-top: 20px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="result-container">
        <h2 class="text-center mb-4">Resultado del Lanzamiento</h2>

        <p><strong>Número del Dado: </strong> @Model.NumeroGenerado</p>
        <p><strong>Altura de Caída: </strong> @Model.Altura metros</p>
        <p><strong>Tiempo estimado de caída: </strong> @Model.TiempoCaida segundos</p>

        <a href="@Url.Action("Index", "Dado")" class="btn btn-secondary btn-block">Volver</a>
    </div>

   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0Wpxk1p47NlI46G6rEp4nIMy0K0evc1ibF5A2pD5ny0h5wdT" crossorigin="anonymous"></script>
</body>
</html>
