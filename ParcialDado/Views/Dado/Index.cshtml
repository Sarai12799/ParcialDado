
@{
	ViewData["Title"] = "Caida de Dado";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJ4QFQFq0mrmz2Yrt8tStuxhK4F67Z6hf5vZgPtDpduga3V0czRA6PfA5dEl" crossorigin="anonymous">

   
    <style>
        body {
            background-color: lightseagreen; 
        }
        .form-container {
            background-color: #ffffff; 
            border-radius: 8px; 
            padding: 30px; 
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 500px; 
            margin: 0 auto;
        }
        h2 {
            color: #9C27B0; 
        }
        .resultado {
            margin-top: 20px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2 class="text-center mb-4">Lanzamiento de un dado</h2>

       
        <form asp-controller="Dado" asp-action="Calcular" method="post">
            <div class="mb-3">
                <label for="altura" class="form-label">Altura de la caída (metros):</label>
                <input type="number" step="0.1" name="altura" id="altura" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Lanzar dado</button>
        </form>

        @if (ViewBag.Resultado != null)
        {
            <div class="resultado text-center mt-4">
                <p>@ViewBag.Resultado</p>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0Wpxk1p47NlI46G6rEp4nIMy0K0evc1ibF5A2pD5ny0h5wdT" crossorigin="anonymous"></script>
</body>
</html>
